<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/five">

        <ImageView
            android:id="@+id/likeIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="bottom"
            android:layout_marginRight="@dimen/ten"
            android:background="@drawable/ic_like_small"
            android:gravity="center" />

        <LinearLayout
            android:id="@+id/checklayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"

            android:layout_toRightOf="@+id/likeIv"

            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/decrementIv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/five"


                android:background="@drawable/ic_minus_small"
                android:gravity="center"
                android:text="Hello World!" />

            <TextView
                android:id="@+id/counttxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@+id/decrementIv"
                android:paddingLeft="@dimen/eigth"
                android:paddingRight="@dimen/eigth"
                android:text="10" />

            <ImageView
                android:id="@+id/addIv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginRight="@dimen/ten"
                android:layout_toRightOf="@+id/counttxt"
                android:background="@drawable/ic_plus_small"
                android:gravity="center"
                android:text="Hello World!" />
        </LinearLayout>

        <Button
            android:id="@+id/addbtn"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="@dimen/ten"
            android:layout_toRightOf="@+id/checklayout"
            android:background="@drawable/rounded_corner"
            android:drawableLeft="@drawable/ic_add_small"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:drawablePadding="-10dp"

            android:text="Add"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent" />

    </RelativeLayout>
</RelativeLayout>

